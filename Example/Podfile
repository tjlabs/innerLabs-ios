use_frameworks!

platform :ios, '13.0'
source 'https://github.com/CocoaPods/Specs.git'
# source 'https://github.com/tjlabs/jupiter-sdk-ios.git'

target 'JupiterSDK_Example' do
  use_frameworks!
  pod 'JupiterSDK', :path => '../'
  pod 'Alamofire'
  pod 'SwiftCSVExport' , '= 2.6.0'
  pod 'GoogleMaps', '4.0.0'
  pod 'GooglePlaces', '4.0.0'
  pod 'Charts' 
  pod 'SnapKit'
  pod 'ExpyTableView'
  pod 'Kingfisher'
  pod 'DropDown'
  pod 'Floaty', '~> 4.2.0'
  pod 'TextFieldEffects'
  
  ## For Firebase
#  pod 'FirebaseAuth', '9.4.0'
#  pod 'FirebaseFirestore', '9.4.0'
#  pod 'FirebaseStorage', '9.4.0'
#  pod 'FirebaseRemoteConfig', '9.4.0'
#  pod 'FirebaseMLModelDownloader', '9.4.0-beta'
#  pod 'TensorFlowLiteSwift'

  pod 'FirebaseMLCommon'
  pod 'Firebase/MLModelInterpreter', '6.25.0'
  pod 'FirebaseRemoteConfig'
  
  
  post_install do |installer|
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        config.build_settings['ONLY_ACTIVE_ARCH'] = 'YES'
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
      end
    end
  end

  target 'JupiterSDK_Tests' do
    inherit! :search_paths

  end
end
