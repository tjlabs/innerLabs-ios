use_frameworks!

platform :ios, '12.0'

#flutter_application_path = './map_ui_module' # Added for Flutter
#load File.join(flutter_application_path, '.ios', 'Flutter', 'podhelper.rb') # Added for Flutter

target 'JupiterSDK_Example' do
  use_frameworks!
  #install_all_flutter_pods(flutter_application_path) # Added for Flutter
  
  pod 'JupiterSDK', :path => '../'
  pod 'Alamofire'
  pod 'SwiftCSVExport' , '= 2.6.0'
  pod 'GoogleMaps', '4.0.0'
  pod 'GooglePlaces', '4.0.0'
  pod 'Charts' 
  pod 'SnapKit'
  pod 'ExpyTableView'
  pod 'Kingfisher'
  pod 'DropDown'
  pod 'Floaty', '~> 4.2.0'
  pod 'TextFieldEffects'
  pod 'AWSS3' 
  
  pod 'FirebaseRemoteConfig'
  pod 'Firebase/Analytics'
  pod 'Firebase/Crashlytics'
  
  post_install do |installer|
    #flutter_post_install(installer) if defined?(flutter_post_install) # Added for Flutter
    
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        config.build_settings['ONLY_ACTIVE_ARCH'] = 'YES'
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '12.0'
      end
    end
  end

  target 'JupiterSDK_Tests' do
    inherit! :search_paths

  end
end
